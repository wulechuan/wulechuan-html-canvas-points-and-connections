canvas-margin = 6rem
canvas-bg = rgba(black, 0.9)

html,
body
    margin: 0
    bottom: 0

body
    background-color: black

#test-canvas
    display: block
    margin: 0
    background-color: canvas-bg
    position: fixed
    left: canvas-margin
    top: canvas-margin
    width: unquote('calc(100% - 2 * ' + canvas-margin + ')')
    height: unquote('calc(100% - 2 * ' + canvas-margin + ')')